			cos(j0*ang),
			cos(j1*ang)

		z0,z1=
			sin(j0*ang)*r,
			sin(j1*ang)*r

		dz0,dz1=
			sin(j0*ang),
			sin(j1*ang)

		g = isOpp==1 and i or j
		if(obj.check0) and ((g<=div*notdraw/100) and (g>=div-div*notdraw/100)) then
			mesh.Rect(true,
				(x0+dx0*dy0)*w,	y0*h/100,	(z0+dz0*dy0)*d,
				(x1+dx1*dy0)*w,	y0*h/100,	(z1+dz1*dy0)*d,
				(x1+dx1*dy1)*w,	y1*h/100,	(z1+dz1*dy1)*d,
				(x0+dx0*dy1)*w,	y1*h/100,	(z0+dz0*dy1)*d
			)
		end

	end
end
